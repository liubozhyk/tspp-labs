               <items>
                  <MenuItem fx:id="goodsImportFile" mnemonicParsing="false" onAction="#importFile" text="Завантажити дані про товари" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false">
               <graphic>
                  <ComboBox fx:id="modeChooser" onAction="#SelectedIndexChanged" prefWidth="150.0" promptText="Виберіть режим" />
