                  <StackPane prefHeight="150.0" prefWidth="0.0" />
               </graphic>
          </Menu>
          <Menu fx:id="goodsImportFileMenu" mnemonicParsing="false" text="Інформація">
               <graphic>
                  <StackPane prefHeight="150.0" prefWidth="0.0" />
